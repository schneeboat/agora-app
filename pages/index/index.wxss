
.container{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  background: #b0e0e6;
}

.tab-wrapper{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.tab-item{
  flex: 1;
  font-size: 32rpx;
  color: #000;
  line-height: 100rpx;
  text-align: center;
}

.tab-active{
  border-bottom: 2px solid #09bb07;
}

.content-wrapper{
  width: 100%;
  flex: 1;
}
.userinfo {
  width: 100%;
  display: flex;
  flex-direction:row;
  justify-content: flex-end;
  align-items: flex-end;
}
.userinfo-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  text-align: right;
}
.userinfo-button{
  margin-right: 0rpx;
  height: 64rpx;
  font-size: 12px;
  background-color:#07C160;
  color:white;
}
.label2{
  margin-bottom: 5rpx;
}